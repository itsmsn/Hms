<div class="center-cls">
<h3>{{viewTitle}}</h3>
</div>
    <div class="container center_cls">
        <form action="/patient" method="POST" autocomplete="off">
            <input type="hidden" name="_id" value="{{patient._id}}">
            <input type="hidden" name="visits" value="{{patients.visits}}">
            <div class="form-group mt-2">
                <input type="text" class="form-control" name="firstname" placeholder="First Name"
                    value="{{patient.firstname}}">
                <div class="text-danger">
                    {{employee.fullNameError}}</div>
            </div>
            <div class="form-group mt-2">
                <input type="text" class="form-control" name="lastname" placeholder="Last Name"
                    value="{{patient.lastname}}">
                <div class="text-danger">
                    {{employee.emailError}}</div>
            </div>
            <div class="form-row mt-2">
                <div class="form-group">
                    <input type="text" class="form-control" name="prescription" placeholder="Prescription"
                        value="{{patient.prescription}}">
                </div>
                <div class="form-group  mt-2">
                    <input type="text" class="form-control" name="cnumber" placeholder="Contact Number"
                        value="{{patient.cnumber}}">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-info mt-3 "><i class="fa fa-database"></i> Submit</button>
                <a class="btn btn-secondary mt-3 " href="/patient/list"><i class="fa fa-list-alt"></i> View All</a>
        </form>
    </div>