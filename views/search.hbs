
<header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow row">
    <a class="btn btn-secondary btn-danger col-lg-2" href="/patient"><i class="fa fa-plus"></i>Add New</a>
    <form action="/patient/search" method="GET" autocomplete="on" class="col-lg-10 d-flex">
      <input type="search" class=" form-control-dark m-1 col-lg-11 rounded" name="Search"
        placeholder="Search Through Contact Number..." value="{{patient.firstname}}">
      <button type="submit" class="btn btn-danger btn-secondary m-1 col-lg-1"><i class="fa fa-database" value="Search"></i>
        Search</button>
    </form>
</header>




<div class="container-fluid">
  <div class="row">
    <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse mr-2 table-striped">
      <div class="position-sticky pt-3">
        <ul class="nav flex-column">
          <li class="nav-item">
            <div class="dropdown-divider" style="border-color:black;"></div>
            <a href="/patient/list" class="btn btn-danger btn-sm "><i class="fa fa-database me-2" </i></i>View
              Details</a>
            <div class="dropdown-divider" style="border-color:black;"></div>
          </li>
          <li class="nav-item">
            <a href="/patient" class="btn btn-danger btn-sm "><i class="fa fa-database me-2" </i></i>Add Other
              Patient</a>
            <div class="dropdown-divider" style="border-color:black;"></div>
          </li>
          <li class="nav-item">
            <a href="/report" class="btn btn-danger btn-sm "><i class="fa fa-database me-2" </i></i>View Reports</a>
            <div class="dropdown-divider" style="border-color:black;"></div>
          </li>
        </ul>
      </div>
    </nav>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
          </div>
          <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
            <span data-feather="calendar"></span>
            This week
          </button>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Prescription</th>
              <th>Contact Number</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{#each i}}
            <tr>
              <td>{{this.firstname}}</td>
              <td>{{this.lastname}}</td>
              <td>{{this.prescription}}</td>
              <td>{{this.cnumber}}</td>
              <td>
                <a href="/patient/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/patient/delete/{{this._id}}"
                  onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg"
                    aria-hidden="true"></i></a>
                <a href="/patient/previous/{{this._id}}"><i class="fa fa-plus-circle fa-lg" aria-hidden="true"></i></a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div style="width: 100%"><iframe width="100%" height="600" frameborder="0" scrolling="no" marginheight="0"
          marginwidth="0"
          src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=West%20Canal%20Road%20Jaranwala+(Hms)&amp;t=&amp;z=7&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe><a
          href="https://www.maps.ie/draw-radius-circle-map/">HMS</a></div>
    </main>
  </div>
</div>