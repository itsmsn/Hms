
<div class="container center_cls">
    <form action="/patient/previous/:id" method="POST" autocomplete="off">
        <input type="hidden" name="_id" value="{{patient._id}}">
        <div class="form-row mt-2">
            <div class="form-group col-md-6">
                <input type="text" class="form-control" name="prescription" placeholder="Prescription"
                    value="{{patient.prescription}}">
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info mt-3 col-6"><i class="fa fa-database"></i> Submit</button>
        </div>
    </form>
</div>